<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF6347" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
